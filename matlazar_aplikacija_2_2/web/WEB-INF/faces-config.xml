<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"> 
    <application>
        <locale-config>
            <default-locale>hr</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>org.foi.nwtis.matlazar.i18n</base-name>
            <var>m</var>
        </resource-bundle>
    </application>
    <navigation-rule>
        <from-view-id>index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{prijava.prijava()}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>pocetna.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{prijava.prijava()}</from-action>
            <from-outcome>NOTOK</from-outcome>
            <to-view-id>index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{prijava.registracija()}</from-action>
            <from-outcome>Registracija</from-outcome>
            <to-view-id>registracija.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>registracija.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{registracija.prijava()}</from-action>
            <from-outcome>Prijava</from-outcome>
            <to-view-id>index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{registracija.prijava()}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>registracija.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>pocetna.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{pocetna.korisnik()}</from-action>
            <from-outcome>Korisnik</from-outcome>
            <to-view-id>korisnik.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{pocetna.meteo()}</from-action>
            <from-outcome>Meteo</from-outcome>
            <to-view-id>prognoze.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{pocetna.serverKomande()}</from-action>
            <from-outcome>Server</from-outcome>
            <to-view-id>server.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{pocetna.iot()}</from-action>
            <from-outcome>IOT</from-outcome>
            <to-view-id>iot.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{pocetna.dnevnik()}</from-action>
            <from-outcome>Dnevnik</from-outcome>
            <to-view-id>dnevnik.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
